<script>
document.addEventListener('DOMContentLoaded', function () {
    // Mobile Menu Toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
    });

    // Skills Chart
    const skillsData = {
        labels: ['Python', 'SQL', 'REST APIs', 'Automation', 'HTML & CSS', 'C', 'Data Structures', 'DBMS'],
        datasets: [{
            label: 'Confidence Level',
            data: [9, 7, 9, 8, 8, 6, 7, 7], // Self-assessed scores out of 10
            backgroundColor: 'rgba(0, 95, 115, 0.6)',
            borderColor: 'rgba(0, 95, 115, 1)',
            borderWidth: 1
        }]
    };

    const skillsChartCtx = document.getElementById('skillsChart').getContext('2d');
    new Chart(skillsChartCtx, {
        type: 'bar',
        data: skillsData,
        options: {
            indexAxis: 'y',
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return `Confidence: ${context.raw}/10`;
                        }
                    }
                }
            },
            scales: {
                x: {
                    beginAtZero: true,
                    max: 10,
                    grid: {
                        color: 'rgba(0,0,0,0.05)'
                    }
                },
                y: {
                     grid: {
                        display: false
                    }
                }
            }
        }
    });

    // Projects Data
    const projects = [
        {
            id: 'proj-flight',
            title: 'Cheap Flight Finder',
            shortDesc: 'A CLI tool to find and get alerts for cheap flights.',
            longDesc: 'Developed a command-line tool that queries Amadeus & Kiwi APIs across over 300 routes. It caches historical fares to a database and triggers email/SMS alerts for price drops greater than 20%. The script is scheduled to run daily using GitHub Actions for continuous monitoring.',
            technologies: ['Python', 'REST API', 'SMTP', 'Twilio', 'GitHub Actions'],
            diagram: ['User Config', 'Kiwi/Amadeus API', 'Price Check (>20% drop?)', 'Email/SMS Alert']
        },
        {
            id: 'proj-birthday',
            title: 'Automated Birthday Mailer',
            shortDesc: 'A Python script to send personalized birthday emails automatically.',
            longDesc: 'Engineered a Python script that reads a list of contacts from a CSV file. It checks daily for birthdays and sends a personalized, heartfelt email using SMTP. The process is fully automated using a scheduled cron job on a server.',
            technologies: ['Python', 'SMTP', 'CSV', 'Cron Job'],
            diagram: ['Read CSV', 'Check Today\'s Date', 'Match Birthday', 'Send Personalized Email']
        },
        {
            id: 'proj-iss',
            title: 'ISS Overhead Notifier',
            shortDesc: 'Get desktop notifications when the ISS is passing overhead.',
            longDesc: 'Created a desktop application that polls the Open Notify API to track the real-time location of the International Space Station. It calculates if the ISS is within a visible range of the user\'s location and delivers a desktop notification to alert them to look up.',
            technologies: ['Python', 'REST API', 'Desktop Notifications'],
            diagram: ['User Location', 'Open Notify API', 'Check Proximity', 'Desktop Notification']
        },
        {
            id: 'proj-rain',
            title: 'Rain Alert SMS',
            shortDesc: 'Receive SMS warnings before it starts to rain.',
            longDesc: 'Implemented a system that fetches live weather forecast data from a weather API. It analyzes the precipitation probability for the user\'s location and sends an SMS warning via Twilio if the probability exceeds a user-defined threshold, helping them prepare for rain.',
            technologies: ['Python', 'REST API', 'Twilio SMS'],
            diagram: ['Get Weather Data', 'Check Rain Probability', 'Threshold Exceeded?', 'Send SMS Alert']
        },
        {
            id: 'proj-stock',
            title: 'Stock News Monitor',
            shortDesc: 'Get relevant stock news when prices move significantly.',
            longDesc: 'Built a tool that combines data from a stock-price API and a news API. It monitors specified stocks and automatically surfaces relevant news headlines when intraday price movements exceed a 5% threshold, keeping the user informed of significant market events.',
            technologies: ['Python', 'REST API', 'Data Processing'],
            diagram: ['Fetch Stock Price', 'Check Price Change (>5%)', 'Fetch Relevant News', 'Display Headlines']
        },
        {
            id: 'proj-habit',
            title: 'Habit Tracker',
            shortDesc: 'A console application for logging daily habits.',
            longDesc: 'Developed a full CRUD (Create, Read, Update, Delete) console application to log daily habits. It interacts with the Pixela API to visualize progress as graphs, using POST, PUT, and DELETE requests with token-based authentication for secure data management.',
            technologies: ['Python', 'REST API', 'CRUD', 'Authentication'],
            diagram: ['User Input (Habit)', 'Pixela API (POST/PUT)', 'Log Data', 'Generate Graph']
        }
    ];

    // Populate Projects Grid
    const projectGrid = document.getElementById('project-grid');
    projects.forEach(project => {
        const projectElement = document.createElement('div');
        projectElement.innerHTML = `
            <div id="${project.id}" class="project-card card-bg rounded-lg shadow-lg overflow-hidden cursor-pointer transition-transform transform hover:-translate-y-1">
                <div class="p-6">
                    <h3 class="text-xl font-bold">${project.title}</h3>
                    <p class="mt-2 text-gray-600">${project.shortDesc}</p>
                </div>
            </div>
            <div id="${project.id}-detail" class="detail-view col-span-1 md:col-span-2 lg:col-span-3 -mt-6">
                <div class="card-bg p-8 rounded-b-lg shadow-inner">
                    <p class="text-gray-600 mb-6">${project.longDesc}</p>
                    <div class="mb-6">
                        <h4 class="font-semibold mb-3">Technologies Used:</h4>
                        <div class="flex flex-wrap gap-2">
                            ${project.technologies.map(tech => `<span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded-full">${tech}</span>`).join('')}
                        </div>
                    </div>
                    <div>
                        <h4 class="font-semibold mb-3">Conceptual Flow:</h4>
                        <div class="flex flex-wrap items-center gap-2 text-sm text-center">
                            ${project.diagram.map((step, index) => `
                                <div class="flex-shrink-0 bg-gray-100 p-2 rounded">${step}</div>
                                ${index < project.diagram.length - 1 ? '<div class="text-gray-400 font-bold">→</div>' : ''}
                            `).join('')}
                        </div>
                    </div>
                </div>
            </div>
        `;
        projectGrid.appendChild(projectElement);
    });

    // Project Card Click Handler
    document.querySelectorAll('.project-card').forEach(card => {
        card.addEventListener('click', () => {
            const detailId = `${card.id}-detail`;
            const detailView = document.getElementById(detailId);
            
            // Close any other open detail views
            document.querySelectorAll('.detail-view.active').forEach(openDetail => {
                if(openDetail.id !== detailId) {
                    openDetail.classList.remove('active');
                }
            });

            // Toggle the clicked one
            detailView.classList.toggle('active');
        });
    });

});
</script>

</body>
</html>
